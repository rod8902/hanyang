JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES =  ./com/rti/hello/idl/MAX_NAME_LEN.java ./com/rti/hello/idl/MAX_MSG_LEN.java ./com/rti/hello/idl/HelloWorld.java ./com/rti/hello/idl/HelloWorldSeq.java ./com/rti/hello/idl/HelloWorldTypeSupport.java ./com/rti/hello/idl/HelloWorldTypeCode.java ./com/rti/hello/idl/HelloWorldDataReader.java ./com/rti/hello/idl/HelloWorldDataWriter.java ./com/rti/hello/idl/HelloWorldSubscriber.java ./com/rti/hello/idl/HelloWorldPublisher.java

CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/class/nddsjava.jar
 
%.class : %.java
	$(JAVAC_PATH)  -classpath .:$(RTI_CLASSPATH) $<
 
all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export LD_LIBRARY_PATH := $(NDDSHOME)/lib/sparcSol2.10jdk:/usr/lib/lwp:$(LD_LIBRARY_PATH)

HelloWorldPublisher: ./com/rti/hello/idl/HelloWorldPublisher.class
	$(JAVA_PATH) -classpath ".:$(RTI_CLASSPATH)"  com.rti.hello.idl.HelloWorldPublisher $(ARGS)
 
HelloWorldSubscriber: ./com/rti/hello/idl/HelloWorldSubscriber.class
	$(JAVA_PATH) -classpath ".:$(RTI_CLASSPATH)"  com.rti.hello.idl.HelloWorldSubscriber $(ARGS)

