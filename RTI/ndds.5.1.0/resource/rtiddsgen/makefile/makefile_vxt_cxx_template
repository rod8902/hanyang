%%archSpecificMakefile%%

DEFINES = $(DEFINES_ARCH_SPECIFIC)  %%additionalDefines%%

INCLUDES      = -I. -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds \
		-I$(WIND_BASE)/../vthreads-2.2.2/target/vThreads/h -I$(WIND_BASE)/../vthreads-2.2.2/target/val/h

LIBS = %%commentLibs%% -L$(NDDSHOME)/lib/%%archName%% \
       -lnddscpp%%libSuffix%% -lnddsc%%libSuffix%% -lnddscore%%libSuffix%% $(syslibs_%%archName%%)

CDRSOURCES    = %%IDLFileBaseName%%.idl
COMMONSOURCES = %%IDLFileBaseName%%%%fileExtension%% %%IDLFileBaseName%%Plugin%%fileExtension%% %%IDLFileBaseName%%Support%%fileExtension%% %%additionalSources%%
EXEC          = %%IDLFileBaseName%%_subscriber %%IDLFileBaseName%%_publisher
DIRECTORIES   = objs.dir objs/%%archName%%.dir
COMMONOBJS    = $(COMMONSOURCES:%%%fileExtension%%=objs/%%archName%%/%.o)

# We actually stick the objects in a sub directory to keep your directory clean.

%%archName%% : $(DIRECTORIES) \
	       $(COMMONOBJS) \
               $(EXEC:%=objs/%%archName%%/%.o) \
	       $(EXEC:%=objs/%%archName%%/%.so) 

objs/%%archName%%/%.so : objs/%%archName%%/%.o %%additionalHeaders%%
	$(cxx_ld_%%archName%%) $(cxx_ld_flags_%%archName%%) -r -o $@ $(@:%.so=%.o) $(COMMONOBJS) $(LIBS)

objs/%%archName%%/%.o : %%%fileExtension%% %%IDLFileBaseName%%.h %%additionalHeaders%%
	$(cxx_cc_%%archName%%) %%compilerDebugFlag%% -o $@ $(DEFINES) $(INCLUDES) -c $<

