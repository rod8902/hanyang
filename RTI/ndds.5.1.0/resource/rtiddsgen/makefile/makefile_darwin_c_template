%%archSpecificMakefile%%

DEFINES = $(DEFINES_ARCH_SPECIFIC)  %%additionalDefines%%

INCLUDES = -I. -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds

LIBS = -L$(NDDSHOME)/lib/%%archName%% \
       -lnddsc%%libSuffix%% -lnddscore%%libSuffix%% $(syslibs_%%archName%%)

CDRSOURCES    = %%IDLFileBaseName%%.idl
COMMONSOURCES = %%IDLFileBaseName%%%%fileExtension%% %%IDLFileBaseName%%Plugin%%fileExtension%% %%IDLFileBaseName%%Support%%fileExtension%% %%additionalSources%%
EXEC          = %%IDLFileBaseName%%_subscriber %%IDLFileBaseName%%_publisher
DIRECTORIES   = objs.dir objs/%%archName%%.dir
COMMONOBJS    = $(COMMONSOURCES:%%%fileExtension%%=objs/%%archName%%/%.o)

# We actually stick the objects in a sub directory to keep your directory clean.
%%archName%% : $(DIRECTORIES) $(COMMONOBJS) \
	       $(EXEC:%=objs/%%archName%%/%.o) \
	       $(EXEC:%=objs/%%archName%%/%.out)

objs/%%archName%%/%.out : objs/%%archName%%/%.o %%additionalHeaders%%
	$(c_ld_%%archName%%) $(c_ld_flags_%%archName%%) %%linkerFlag%% -o $(@:%.out=%) $(@:%.out=%.o) $(COMMONOBJS) $(LIBS)

objs/%%archName%%/%.o : %%%fileExtension%% %%IDLFileBaseName%%.h %%additionalHeaders%%
	$(c_cc_%%archName%%) $(c_cc_flags_%%archName%%) %%compilerDebugFlag%% -o $@ $(DEFINES) $(INCLUDES) -c $<

#
# Uncomment these lines if you want the support files regenerated when idl
# file is modified
#
#%%IDLFileBaseName%%%%fileExtension%% %%IDLFileBaseName%%.h \
#%%IDLFileBaseName%%Plugin%%fileExtension%% %%IDLFileBaseName%%Plugin.h \
#%%IDLFileBaseName%%Support%%fileExtension%% %%IDLFileBaseName%%Support.h : \
#		%%IDLFileBaseName%%.idl
#	$(NDDSHOME)/scripts/rtiddsgen %%IDLFileBaseName%%.idl -replace -language C

# Here is how we create those subdirectories automatically.
%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;
