JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES = %%JavaSourceFiles%%

CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/class/nddsjava%%libSuffix%%.jar%%CorbaClassPath%%
 
%.class : %.java
	$(JAVAC_PATH) %%compilerDebugFlag%% -classpath .:$(RTI_CLASSPATH) $<
 
all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export LD_LIBRARY_PATH := $(NDDSHOME)/lib/%%archName%%:/usr/lib/lwp:$(LD_LIBRARY_PATH)

%%ExampleType%%Publisher: %%ExampleTypeClassPath%%Publisher.class
	$(JAVA_PATH) -classpath ".:$(RTI_CLASSPATH)" %%CorbaProperties%% %%ExampleTypeClassPackage%%Publisher $(ARGS)
 
%%ExampleType%%Subscriber: %%ExampleTypeClassPath%%Subscriber.class
	$(JAVA_PATH) -classpath ".:$(RTI_CLASSPATH)" %%CorbaProperties%% %%ExampleTypeClassPackage%%Subscriber $(ARGS)

